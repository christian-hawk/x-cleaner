[MASTER]
# Use multiple processes to speed up Pylint
jobs=4

# Pickle collected data for later comparisons
persistent=yes

# Allow loading of arbitrary C extensions
unsafe-load-any-extension=no

[MESSAGES CONTROL]
# Disable specific warnings
disable=
    C0111,  # missing-docstring (we handle this with mypy)
    C0103,  # invalid-name (handled by naming conventions)
    R0903,  # too-few-public-methods (Pydantic models)
    W0212,  # protected-access (needed for testing)
    W0613,  # unused-argument (common in FastAPI)
    R0913,  # too-many-arguments (use dataclass instead)
    R0914,  # too-many-locals (refactor if too many)
    R0915,  # too-many-statements (refactor if too many)
    C0301,  # line-too-long (handled by Black)
    C0330,  # bad-continuation (handled by Black)

[BASIC]
# Good variable names which should always be accepted
good-names=i,j,k,e,_,id,db

# Bad variable names which should always be refused
bad-names=foo,bar,baz,toto,tutu,tata

# Regular expression matching correct function names
function-rgx=[a-z_][a-z0-9_]{2,50}$

# Regular expression matching correct variable names
variable-rgx=[a-z_][a-z0-9_]{2,50}$

# Regular expression matching correct constant names
const-rgx=(([A-Z_][A-Z0-9_]*)|(__.*__))$

# Regular expression matching correct class names
class-rgx=[A-Z_][a-zA-Z0-9]+$

[FORMAT]
# Maximum number of characters on a single line (handled by Black)
max-line-length=88

# Maximum number of lines in a module
max-module-lines=800

[DESIGN]
# Maximum number of arguments for function / method
max-args=5

# Maximum number of locals for function / method body
max-locals=15

# Maximum number of return / yield for function / method body
max-returns=6

# Maximum number of branch for function / method body
max-branches=12

# Maximum number of statements in function / method body
max-statements=50

# Maximum number of public methods for a class
max-public-methods=20

# Maximum number of attributes for a class
max-attributes=10

[IMPORTS]
# Deprecated modules which should not be used
deprecated-modules=optparse,tkinter.tix

[EXCEPTIONS]
# Exceptions that will emit a warning when being caught
overgeneral-exceptions=BaseException,Exception

[REPORTS]
# Set the output format
output-format=colorized

# Include message's id in output
include-ids=yes

# Tells whether to display a full report or only the messages
reports=no

# Activate the evaluation score
score=yes
